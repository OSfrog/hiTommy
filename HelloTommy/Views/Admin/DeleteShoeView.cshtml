@model dynamic
@{
    ViewData["Title"] = "Admin - Delete Shoe";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/admin-sub.css")" />
}


<div class="form-container" id="auto-height">
    <form id="contact" method="POST" >
        <h1>Delete a shoe by ID </h1>
        <h4>Super secret admin site</h4>
        <fieldset>
            <label for="Id"></label>
            <input type="number" id="Id" placeholder="ShoeID goes brrr" name="id" />
        </fieldset>
        <fieldset>
            <input type="submit" value="Send" name="submit" id="contact-submit" data-submit="...Sending">
        </fieldset>
    </form>

    <div class="shoe-list-container">
        <ul>
            @foreach (var shoe in Model.AllShoes)
            {
                <li>ID: @shoe.Id   Name: @shoe.Name </li>
            }
        </ul>
    </div>
</div>