@model dynamic
@{
    ViewData["Title"] = "Login";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/login.css")" />
    }

<meta name="google-signin-client_id" content="78999044413-obg6n2pul7vup0qqr3et77bpos8lihes.apps.googleusercontent.com">
<section class="container">
    <div class="login-page">
        <form id="login" method="POST">
            <h1>Log in</h1>
            <fieldset>
                <label for="Email"></label>
                <input type="text" id="email" placeholder="E-mail" name="email" />
            </fieldset>
            <fieldset>
                <label for="Password"></label>
                <input type="text" id="password" placeholder="Password" name="password" />
            </fieldset>
            <fieldset>
                <input type="submit" value="Log In" name="login" id="login-submit" data-submit="...Sending">
            </fieldset>
        </form>

        <h3>Or log in with...</h3>
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
    </div>
    <div class="registration-page">
        <form id="contact" method="POST">
            <h1>No account? Create your account here!</h1>
            <h4>Your Name</h4>
            <fieldset>
                <label for="Firstname"></label>
                <input type="text" id="firstname" placeholder="Firstname*" name="Firstname" />
            </fieldset>
            <fieldset>
                <label for="Firstname"></label>
                <input type="text" id="lastname" placeholder="Lastname*" name="Lastname" />
            </fieldset>
            <h4>Birthdate</h4>
            <section class="birthdate">
                <fieldset>
                    <label for="birthDay"></label>
                    <input type="text" id="birthDay" placeholder="dd*" name="birthday" />
                </fieldset>
                <fieldset>
                    <label for="birthMonth"></label>
                    <input type="text" id="birthMonth" placeholder="mm*" name="birthmonth" />
                </fieldset>
                <fieldset>
                    <label for="birthYear"></label>
                    <input type="text" id="birthYear" placeholder="yyyy*" name="birthyear" />
                </fieldset>
            </section>
            <h4>Login Credentials</h4>
            <fieldset>
                <label for="E-mail"></label>
                <input type="text" id="newEmail" placeholder="E-mail*" name="email" />
            </fieldset>
            <fieldset>
                <label for="Password"></label>
                <input type="text" id="newPassword" placeholder="Password*" name="newPassword" />
            </fieldset>
            <fieldset>
                <label for="Confirm-Password"></label>
                <input type="text" id="confirmPassword" placeholder="Confirm Password*"
                       name="confirmPassword" />
            </fieldset>
            <fieldset>
                <input type="submit" value="Register" name="register" id="register-submit"
                       data-submit="...Sending">
            </fieldset>
        </form>
    </div>
</section>

    <script src="https://apis.google.com/js/platform.js" async defer></script>