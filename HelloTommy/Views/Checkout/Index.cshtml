@model dynamic
@{ ViewData["Title"] = "Checkout";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/checkout.css")">
}

<h3 id="header-text">Checkout</h3>
<h5 id="selected-products">Selected products</h5>
<div class="main-checkout-container">
    <section class="checkout-container">
        <div class="selectedProducts-container">
            <div class="product-container">
                <div id="" class="product-item">
                    <div class="product-item-left">
                        <p class="product-name">@Model.Shoe.Name</p>
                        <p class="product-size">Size: @Model.Size</p>
                        <img src="@Model.Shoe.PictureUrl" class="product-image-top" />
                    </div>
                    <div class="product-item-right">
                        <p class="product-price">@Model.Shoe.Price SEK</p>
                        <button id="" class="productDetails-btn">Details</button>
                    </div>
                </div>
                <hr>
                <div class="checkout-details-container hidden">
                    <div class="details-box">
                        <div class="details-product-description">@Model.Shoe.Description</div>
                        <img src="@Model.Shoe.PictureUrl" class="details-product-image"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="payment-container">
            <div class="paymentMethod-container">
                <label for="payment-method">Payment Method</label>
                <select name="payment-method" id="payment-method">
                    <option value="">Invoice</option>
                </select>
            </div>
            <div class="billingInformation-container">
                <form id="billing-info-form"></form>
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" form="billing-info-form" name="firstName" required>
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" form="billing-info-form" name="lastName" required>

                <label for="billing">Billing Address</label>
                <input type="text" id="billing" form="billing-info-form" name="billing" required>
                <label for="city">City</label>
                <input type="text" id="city" form="billing-info-form" name="city" required>


                <label for="postal">Postal Code</label>
                <input type="text" id="postal" form="billing-info-form" name="postal" required>
                <!-- Dropdown -->
                <label for="phone">Email</label>
                <input type="text" id="email" form="billing-info-form" name="email" required>
                <label for="phone">Phone Number</label>
                <input type="text" id="phone" form="billing-info-form" name="phone" required>
            </div>

            <div class="totalPayment-container">
                <div class="totalSum">
                    <h5>Total sum: @Model.Shoe.Price SEK</h5>
                </div>
                <input type="submit" value="Checkout" formaction="/OrderConfirmed" form="billing-info-form" class="checkout-button"/>
                
            </div>
        </div>
    </section>
</div>
<div class="back-link">
    <a class="back" href="/" Home id="back">&#8592; Back to store</a>
</div>

@section Scripts{
    <script src="@Url.Content("~/js/checkout.js")"></script>
}